          "name": "Run React and Attach Debugger",
          "configurations": ["Debug React App", "Attach to Chrome (React)"]
          //"configurations": ["Start Server", "Start Client", "Debug React App", "Attach to Chrome (React)"]
        }
      ],
    "configurations": [      
        /*{
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },

        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Start Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server.js"
          },
          {
            "name": "Start Client",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["start"],
            "cwd": "${workspaceFolder}/client"
          },*/
          {
            "name": "Debug React App",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["start"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
              "NODE_OPTIONS": "--openssl-legacy-provider"
            }
          },
          {
            "name": "Attach to Chrome (React)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMaps": true
          }
    ]
}